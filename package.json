{
  "name": "squad-server-info-discord-bot",
  "version": "2.7.0",
  "description": "Discord Bot to show squad server information",
  "author": "Mikerosoft25",
  "homepage": "https://github.com/WeLoveSquad/squad-server-info-discord-bot#readme",
  "url": "https://github.com/WeLoveSquad/squad-server-info-discord-bot/issues",
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "test": "ts-mocha -n loader=ts-node/esm/transpile-only -p tsconfig.json 'test/**/*.test.ts' --exit",
    "format": "prettier --write \"(src|test)/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "preversion": "npm run lint && npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "serve": "node build/main.js",
    "start": "node --loader ts-node/esm/transpile-only src/main.ts",
    "dev": "nodemon --exec node --loader ts-node/esm/transpile-only src/main.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "settings/*"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "squad"
  ],
  "dependencies": {
    "@discordx/importer": "^1.3.0",
    "config": "^3.3.9",
    "discord.js": "^14.14.1",
    "discordx": "^11.9.0",
    "luxon": "^3.4.4",
    "reflect-metadata": "^0.1.14",
    "steam-server-query": "^1.1.3",
    "tsyringe": "^4.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "^7.1.8",
    "@types/config": "^3.3.3",
    "@types/luxon": "^3.3.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
