{
  "name": "squad-server-info-discord-bot",
  "version": "2.7.0",
  "description": "Discord Bot to show squad server information",
  "author": "Mikerosoft25",
  "homepage": "https://github.com/WeLoveSquad/squad-server-info-discord-bot#readme",
  "url": "https://github.com/WeLoveSquad/squad-server-info-discord-bot/issues",
  "license": "MIT",
  "type": "module",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc",
    "test": "ts-mocha -n loader=ts-node/esm/transpile-only -p tsconfig.json 'test/**/*.test.ts' --exit",
    "format": "prettier --write \"(src|test)/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "preversion": "npm run lint && npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "serve": "node build/main.js",
    "start": "node --loader ts-node/esm/transpile-only src/main.ts",
    "dev": "nodemon --exec node --loader ts-node/esm/transpile-only src/main.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "settings/*"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "squad"
  ],
  "dependencies": {
    "@discordx/importer": "^1.2.3",
    "@fabricio-191/valve-server-query": "^4.1.9",
    "config": "^3.3.9",
    "discord.js": "^14.13.0",
    "discordx": "^11.7.6",
    "luxon": "^3.4.3",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/chai-as-promised": "^7.1.7",
    "@types/config": "^3.3.2",
    "@types/luxon": "^3.3.3",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
